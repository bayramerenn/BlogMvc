@model UserUpdateDto

@{
    ViewData["Title"] = "Profil Düzenle";
}


<div class="row">
    <div class="col-md-12">
        <div class="card" mt-3>
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> Profil Düzenle</h4>
            </div>
            <div class="card-body">
                <form asp-action="ChangeDetails" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="Id" type="hidden" />


                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Picture"></label>
                        <img class="my-image" src="~/img/@Model.Picture" alt="@Model.UserName" />
                        <input class="form-control" asp-for="Picture" type="hidden" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureFile"></label>
                        <input type="file" accept="image/*" class="form-control-file" asp-for="PictureFile" placeholder="Lütfen, resim seçiniz" />
                        <span class="text-danger" asp-validation-for="PictureFile"></span>
                    </div>
                    <div class="form-group">
                   
                        <button type="submit" class="btn btn-primary"><span class="fas fa-edit"></span> Kaydet</button>
                        <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <span class="fas fa-times"></span> İptal</a>
                    </div>
                </form>
            </div>
        </div>
       
    </div>
</div>

