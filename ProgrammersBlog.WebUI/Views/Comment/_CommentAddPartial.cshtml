@model CommentAddDto
<!-- Comments Form -->
<div class="card my-4">
    <h5 class="card-header">Bir yorum ekle:</h5>
    <div class="card-body form-card">
        <form asp-controller="Comment" asp-action="Add" method="post" id="form-comment-add">
            <input type="hidden" name="IsValid" value="@ViewData.ModelState.IsValid.ToString()" />
            <div asp-validation-summary="All" class="text-center" id="validation-summary" aria-hidden="true" style="display:none;"></div>
            <input type="hidden" asp-for="ArticleId" />
            <div class="form-group">
                <label asp-for="CreatedByName"></label>
                <input asp-for="CreatedByName" class="form-control"/>
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="3" asp-for="Text"></textarea>
            </div>
            <button type="submit" class="btn btn-primary" id="btnSave">Ekle</button>
        </form>
    </div>
</div>